<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:text="Welcome"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/nicetomeetyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:text="Nice to &#10;meet you"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/mynameis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:text="my name is"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/iloveyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:text="I love you"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/ihateyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:text="i hate you"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/iamfine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_gravity="fill"
            android:text="i am fine"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/howareyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_gravity="fill"
            android:text="how are you"
            android:onClick="buttonTapped" />

        <Button
            android:id="@+id/goodby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="good bye"
            app:layout_columnWeight="1"
            app:layout_row="3"
            app:layout_rowWeight="1"
            app:layout_column="1"
            android:layout_marginStart="10dp"
            app:layout_gravity="fill"
            android:onClick="buttonTapped" />

    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>